<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>webshop.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>webshop.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>webshop.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SwitchServlet</servlet-name>
        <servlet-class>webshop.controller.SwitchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ps4Servlet</servlet-name>
        <servlet-class>webshop.controller.Ps4Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>XboxServlet</servlet-name>
        <servlet-class>webshop.controller.XboxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PCServlet</servlet-name>
        <servlet-class>webshop.controller.PCServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameServlet</servlet-name>
        <servlet-class>webshop.controller.GameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>webshop.controller.BuyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>webshop.controller.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>webshop.controller.PaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmationServlet</servlet-name>
        <servlet-class>webshop.controller.ConfirmationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>webshop.controller.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/homeScreen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SwitchServlet</servlet-name>
        <url-pattern>/switch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ps4Servlet</servlet-name>
        <url-pattern>/ps4</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XboxServlet</servlet-name>
        <url-pattern>/xbox</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PCServlet</servlet-name>
        <url-pattern>/pc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameServlet</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmationServlet</servlet-name>
        <url-pattern>/confirmation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <location>/errorpage.jsp</location>
    </error-page>
</web-app>
